<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>


    <ItemGroup>
        <Content Include="..\protobuf\common.proto">
            <Link>Protobuf/Proto/common.proto</Link>
        </Content>
        <Content Include="..\protobuf\aelf_options.proto">
            <Link>Protobuf/Proto/aelf_options.proto</Link>
        </Content>
        <Content Include="..\protobuf\token_contract.proto">
            <Link>Protobuf/Proto/token_contract.proto</Link>
        </Content>
        <Content Include="..\protobuf\fee_receiver_contract.proto">
            <Link>Protobuf/Proto/fee_receiver_contract.proto</Link>
        </Content>
    </ItemGroup>

    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="$([MSBuild]::IsOsPlatform(Linux))" Command="protoc --proto_path=../protobuf --csharp_out=internal_access:./Protobuf/Generated --csharp_opt=file_extension=.g.cs token_contract.proto; protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --contract_out=./Protobuf/Generated fee_receiver_contract.proto --plugin=protoc-gen-contract=../scripts/contract_csharp_plugin_linux" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(OSX))" Command="protoc --proto_path=../protobuf --csharp_out=internal_access:./Protobuf/Generated --csharp_opt=file_extension=.g.cs token_contract.proto; protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --contract_out=./Protobuf/Generated fee_receiver_contract.proto --plugin=protoc-gen-contract=../scripts/contract_csharp_plugin_osx" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="protoc --proto_path=../protobuf --csharp_out=internal_access:./Protobuf/Generated --csharp_opt=file_extension=.g.cs token_contract.proto; protoc --proto_path=../protobuf --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs --contract_out=./Protobuf/Generated fee_receiver_contract.proto --plugin=protoc-gen-contract=../scripts/contract_csharp_plugin.exe" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>

</Project>
